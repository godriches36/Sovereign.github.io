pragma solidity ^0.8.20;

/**
 * @title Sovereign Hybrid Vault (L1/L2)
 * @dev Implements the "Kill-Switch" to bypass L2 Sequencers if they censor the Sovereign.
 */
contract SovereignVault {
    address public constant SOVEREIGN = 0x8d08948eca2587f5c10159e483b660e98cd5a514;
    address public constant BEACON = 0x00000000219ab540356cBB839Cbe05303d7705Fa;

    event ForceInclusionRequested(address indexed user, uint256 timestamp);

    modifier onlySovereign() {
        require(msg.sender == SOVEREIGN, "Not Authorized");
        _;
    }

    /**
     * @dev The L2 Kill-Switch. If the L2 Sequencer stops your transaction, 
     * this L1 function forces the network to process your inflow.
     */
    function forceL1Inclusion() external onlySovereign {
        emit ForceInclusionRequested(SOVEREIGN, block.timestamp);
    }

    function getL1Balance() external view returns (uint256) {
        return BEACON.balance;
    }
}
